<?xml version="1.0" encoding="utf-8"?>
<!-- TASK 2: Enhanced profile viewing interface with comprehensive information display -->
<!-- PROFILE_LAYOUT_EXT: Building upon existing fragment_profile.xml structure -->
<!-- PROFILE_PATTERNS: Reusing Material Design 3 patterns from existing stories -->
<!-- PROFILE_UIUX: Applying 8-point grid and typography specs -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_sage_neutral"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_16dp">

    <!-- PROFILE_SECTIONS: Enhanced Profile Header Card with Sage Green Design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/sage_green_light"
        app:cardCornerRadius="@dimen/corner_radius_12dp"
        app:cardElevation="@dimen/elevation_2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_24dp">

            <!-- Profile Avatar -->
            <ImageView
                android:id="@+id/profile_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/profile_avatar_background"
                android:contentDescription="Profile Avatar - Tap to change your profile picture"
                android:src="@drawable/ic_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/sage_green" />

            <!-- TASK 3: Edit Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_profile_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Edit Profile"
                android:textColor="@color/sage_green"
                android:contentDescription="Edit your profile information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- User Name View Mode -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="User"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_header_card" />

    <!-- User Name Edit Mode -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_user_name"
        style="@style/VibeHealth.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:hint="Full Name"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_header_card">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_user_name"
            style="@style/VibeHealth.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:maxLength="50" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- User Email -->
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="user@example.com"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name" />

    <!-- PROFILE_SECTIONS: Personal Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/personal_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/corner_radius_12dp"
        app:cardElevation="@dimen/elevation_2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_email">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@color/sage_green"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <!-- Birthday View Mode -->
            <LinearLayout
                android:id="@+id/birthday_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Birthday"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/birthday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not set"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Birthday Edit Mode -->
            <LinearLayout
                android:id="@+id/birthday_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <Button
                    android:id="@+id/btn_birthday_picker"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_field_height"
                    android:contentDescription="Select your birthday"
                    android:gravity="start|center_vertical"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    android:text="Select date"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_secondary"
                    app:cornerRadius="@dimen/corner_radius"
                    app:icon="@drawable/ic_calendar"
                    app:iconGravity="end"
                    app:iconTint="@color/text_secondary"
                    app:strokeColor="@color/sage_green"
                    app:strokeWidth="1dp" />

            </LinearLayout>

            <!-- Gender View Mode -->
            <LinearLayout
                android:id="@+id/gender_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/gender_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not specified"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Gender Edit Mode -->
            <LinearLayout
                android:id="@+id/gender_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/touch_target_min"
                        android:text="Male"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/sage_green"
                        android:layout_marginVertical="2dp" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/touch_target_min"
                        android:text="Female"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/sage_green"
                        android:layout_marginVertical="2dp" />

                    <RadioButton
                        android:id="@+id/rb_other"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/touch_target_min"
                        android:text="Other"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/sage_green"
                        android:layout_marginVertical="2dp" />

                    <RadioButton
                        android:id="@+id/rb_prefer_not_to_say"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/touch_target_min"
                        android:text="Prefer not to say"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/sage_green"
                        android:layout_marginVertical="2dp" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- PROFILE_SECTIONS: Health Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/health_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/corner_radius_12dp"
        app:cardElevation="@dimen/elevation_2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personal_info_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Information"
                android:textColor="@color/sage_green"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <!-- Height View Mode -->
            <LinearLayout
                android:id="@+id/height_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/height_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not set"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Height Edit Mode -->
            <LinearLayout
                android:id="@+id/height_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_height"
                        style="@style/VibeHealth.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:hint="Height">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_height"
                            style="@style/VibeHealth.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_height_unit"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/input_field_height"
                        android:text="cm"
                        android:textColor="@color/sage_green"
                        android:minWidth="60dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Weight View Mode -->
            <LinearLayout
                android:id="@+id/weight_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not set"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Weight Edit Mode -->
            <LinearLayout
                android:id="@+id/weight_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_weight"
                        style="@style/VibeHealth.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:hint="Weight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_weight"
                            style="@style/VibeHealth.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_weight_unit"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/input_field_height"
                        android:text="kg"
                        android:textColor="@color/sage_green"
                        android:minWidth="60dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- BMI (calculated) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BMI"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bmi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not calculated"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- PROFILE_SECTIONS: Preferences Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/preferences_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/corner_radius_12dp"
        app:cardElevation="@dimen/elevation_2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/health_info_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferences"
                android:textColor="@color/sage_green"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <!-- Unit System -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unit System"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/unit_system_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metric"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- PROFILE_COMPONENTS: Goals Section Integration -->
    <com.vibehealth.android.ui.profile.components.ProfileGoalsSection
        android:id="@+id/profile_goals_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/preferences_card" />

    <!-- Edit Mode Action Buttons -->
    <LinearLayout
        android:id="@+id/edit_action_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_goals_section">

        <Button
            android:id="@+id/btn_cancel_edit"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="Cancel"
            android:textColor="@color/text_secondary"
            app:strokeColor="@color/text_secondary" />

        <Button
            android:id="@+id/btn_save_profile"
            style="@style/VibeHealth.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Save Changes"
            android:backgroundTint="@color/sage_green" />

    </LinearLayout>

    <!-- Profile Options -->
    <LinearLayout
        android:id="@+id/profile_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_action_buttons">

        <!-- Settings Option -->
        <TextView
            android:id="@+id/settings_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium"
            android:text="Settings"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center_vertical" />

        <!-- Privacy Option -->
        <TextView
            android:id="@+id/privacy_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium"
            android:text="Privacy"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_privacy"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center_vertical" />

        <!-- Help Option -->
        <TextView
            android:id="@+id/help_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium"
            android:text="Help &amp; Support"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_help"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        style="@style/VibeHealth.Button.Primary"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:text="Logout"
        android:backgroundTint="@color/error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_options" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>