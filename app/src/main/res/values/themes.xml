<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VibeHealth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Vibe Health Design System Colors -->
        <item name="colorPrimary">@color/sage_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/warm_gray_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/soft_coral</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_light</item>
        <item name="colorSurfaceContainer">@color/background_light</item>
        <item name="colorSurfaceContainerHigh">@color/background_light</item>
        <item name="colorSurfaceContainerHighest">@color/background_light</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_light</item>
        
        <!-- Status bar - Immersive mode -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">false</item>

        <!-- Custom attributes -->
        <item name="colorSuccess">@color/success</item>
        <item name="colorWarning">@color/warning</item>
        <item name="colorInfo">@color/info_blue</item>
    </style>

    <style name="Theme.VibeHealth" parent="Base.Theme.VibeHealth" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.VibeHealth.Splash" parent="Base.Theme.VibeHealth">
        <item name="android:windowBackground">@drawable/splash_gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- DatePicker Theme -->
    <style name="DatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/sage_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>
</resources>