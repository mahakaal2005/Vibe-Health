<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="@dimen/spacing_large">

    <!-- Profile Header -->
    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:background="@drawable/profile_avatar_background"
        android:contentDescription="Profile Avatar"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/sage_green" />

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="User"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_avatar" />

    <!-- User Email -->
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="user@example.com"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name" />

    <!-- Profile Options -->
    <LinearLayout
        android:id="@+id/profile_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_email">

        <!-- Settings Option -->
        <TextView
            android:id="@+id/settings_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium"
            android:text="Settings"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center_vertical" />

        <!-- Privacy Option -->
        <TextView
            android:id="@+id/privacy_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium"
            android:text="Privacy"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_privacy"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center_vertical" />

        <!-- Help Option -->
        <TextView
            android:id="@+id/help_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_medium"
            android:text="Help &amp; Support"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_help"
            android:drawablePadding="@dimen/spacing_medium"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        style="@style/VibeHealth.Button.Primary"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        android:text="Logout"
        android:backgroundTint="@color/error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_options" />

</androidx.constraintlayout.widget.ConstraintLayout>