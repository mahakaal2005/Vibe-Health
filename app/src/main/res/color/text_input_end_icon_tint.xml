<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Always use sage green for end icon, even in error state -->
    <item android:state_enabled="false" android:color="@color/sage_green" />
    <item android:state_pressed="true" android:color="@color/sage_green" />
    <item android:state_focused="true" android:color="@color/sage_green" />
    <item android:state_selected="true" android:color="@color/sage_green" />
    <!-- Default state - also sage green -->
    <item android:color="@color/sage_green" />
</selector>