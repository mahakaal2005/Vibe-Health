<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_feedback_card"
    android:elevation="@dimen/card_elevation_default"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium">

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/layoutLoadingState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iconLoading"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:contentDescription="@string/loading_icon"
            android:src="@drawable/ic_refresh_animated"
            app:tint="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressRecalculation"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textLoadingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body1"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                tools:text="Recalculating your goals..."
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Success State -->
    <LinearLayout
        android:id="@+id/layoutSuccessState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconSuccess"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:contentDescription="@string/success_icon"
                android:src="@drawable/ic_check_circle"
                app:tint="?attr/colorSuccess" />

            <TextView
                android:id="@+id/textSuccessMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body1"
                android:textColor="?attr/colorSuccess"
                tools:text="Your goals have been updated successfully!" />

            <ImageView
                android:id="@+id/buttonDismiss"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/dismiss"
                android:focusable="true"
                android:src="@drawable/ic_close"
                app:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Goal Changes -->
        <LinearLayout
            android:id="@+id/layoutGoalChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/goal_changes"
                android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle2"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/textStepsChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xs"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:visibility="gone"
                tools:text="Steps: 10,000 → 10,500 (+500)"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textCaloriesChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xs"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:visibility="gone"
                tools:text="Calories: 2,000 → 2,100 (+100)"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textHeartPointsChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:visibility="gone"
                tools:text="Heart Points: 30 → 32 (+2)"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/layoutErrorState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconError"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:contentDescription="@string/error_icon"
                android:src="@drawable/ic_error"
                app:tint="?attr/colorError" />

            <TextView
                android:id="@+id/textErrorMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body1"
                android:textColor="?attr/colorError"
                tools:text="We couldn't update your goals right now. Please try again." />

        </LinearLayout>

        <!-- Retry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRetry"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/try_again"
            app:icon="@drawable/ic_refresh" />

    </LinearLayout>

</LinearLayout>