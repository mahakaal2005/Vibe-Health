<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Date and Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/greetingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Vibe Health"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2E2E2E"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Profile Avatar -->
            <TextView
                android:id="@+id/profileEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ˜Š"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@drawable/profile_avatar_background"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Triple Ring View - The Core Feature -->
        <com.vibehealth.android.ui.components.TripleRingView
            android:id="@+id/tripleRingView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- Goal Source Text - REMOVED for cleaner design -->
        <TextView
            android:id="@+id/goalSourceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />

        <!-- Motivational Message -->
        <TextView
            android:id="@+id/motivationalMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#2E2E2E"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2dp"
            android:visibility="gone" />



        <!-- Progress Summary Container -->
        <LinearLayout
            android:id="@+id/progressSummaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Steps Card -->
            <LinearLayout
                android:id="@+id/stepsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/steps_card_background"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/stepsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸš¶ Steps"
                    android:textSize="16sp"
                    android:textColor="#2E2E2E"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/stepsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E2E2E" />

                <TextView
                    android:id="@+id/stepsPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="#6B8E6B"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/percentage_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

            <!-- Calories Card -->
            <LinearLayout
                android:id="@+id/caloriesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/calories_card_background"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/caloriesText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”¥ Calories"
                    android:textSize="16sp"
                    android:textColor="#2E2E2E"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/caloriesNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E2E2E" />

                <TextView
                    android:id="@+id/caloriesPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="#7A8471"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/percentage_background_calories"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

            <!-- Heart Points Card -->
            <LinearLayout
                android:id="@+id/heartPointsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/heart_card_background"
                android:layout_marginBottom="16dp"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/heartPointsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â¤ï¸ Heart Points"
                    android:textSize="16sp"
                    android:textColor="#2E2E2E"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/heartPointsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E2E2E" />

                <TextView
                    android:id="@+id/heartPointsPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="#B5846B"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/percentage_background_heart"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Error State Container -->
        <LinearLayout
            android:id="@+id/errorStateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Something went wrong"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/retryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry" />

        </LinearLayout>

        <!-- Empty State Container -->
        <LinearLayout
            android:id="@+id/emptyStateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/emptyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No data available"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/setupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setup" />

        </LinearLayout>

        <!-- Refresh FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refreshFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/ic_menu_rotate" />

    </LinearLayout>

</ScrollView>