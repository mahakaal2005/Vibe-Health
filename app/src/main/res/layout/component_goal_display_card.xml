<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!-- Header with title and indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/daily_wellness_goals"
                android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                android:textColor="?attr/colorOnSurface" />

            <ImageView
                android:id="@+id/indicatorValidity"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_marginEnd="@dimen/spacing_small"
                android:contentDescription="@string/goal_validity_indicator"
                android:src="@drawable/ic_check_circle"
                app:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/indicatorFreshness"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:contentDescription="@string/goal_freshness_indicator"
                android:src="@drawable/ic_refresh"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressIndicator"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Goal values container -->
        <LinearLayout
            android:id="@+id/layoutGoalValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="vertical">

            <!-- Steps Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/spacing_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:contentDescription="@string/steps_icon"
                    android:src="@drawable/ic_steps"
                    app:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/steps"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/textStepsGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="10,000 steps" />

                </LinearLayout>

            </LinearLayout>

            <!-- Calories Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/spacing_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:contentDescription="@string/calories_icon"
                    android:src="@drawable/ic_calories"
                    app:tint="?attr/colorSecondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/textCaloriesGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="2,000 calories" />

                </LinearLayout>

            </LinearLayout>

            <!-- Heart Points Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/spacing_small">

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:contentDescription="@string/heart_points_icon"
                    android:src="@drawable/ic_heart_points"
                    app:tint="?attr/colorTertiary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_points"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/textHeartPointsGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="30 heart points" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/spacing_medium"
            android:background="?attr/colorOutlineVariant" />

        <!-- Source information -->
        <LinearLayout
            android:id="@+id/layoutSourceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:contentDescription="@string/who_logo"
                    android:src="@drawable/ic_who_logo"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/textCalculationSource"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle2"
                    android:textColor="?attr/colorPrimary"
                    tools:text="WHO Standards" />

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:contentDescription="@string/more_info"
                    android:src="@drawable/ic_info"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <TextView
                android:id="@+id/textSourceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:layout_marginStart="@dimen/spacing_large"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Calculated based on World Health Organization guidelines and your personal profile" />

            <TextView
                android:id="@+id/textLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:layout_marginStart="@dimen/spacing_large"
                android:textAppearance="@style/TextAppearance.VibeHealth.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Updated today at 2:30 PM" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>