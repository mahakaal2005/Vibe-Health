<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_sage_neutral">
    
    <!-- Main Content with Tabbed Interface -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <!-- Content Type Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/content_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_16dp"
            android:layout_marginTop="@dimen/spacing_16dp"
            android:layout_marginBottom="@dimen/spacing_8dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/sage_green_primary"
            app:tabSelectedTextColor="@color/sage_green_primary"
            app:tabTextColor="@color/warm_gray_green"
            app:tabIndicatorHeight="3dp"
            app:tabRippleColor="@color/sage_green_light"
            style="@style/Widget.Material3.TabLayout" />
        
        <!-- ViewPager2 for Content Categories -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/content_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
    </LinearLayout>
    
    <!-- Loading State -->
    <include
        android:id="@+id/loading_state"
        layout="@layout/view_loading_state"
        android:visibility="gone" />
    
    <!-- Error State - Using existing offline state pattern -->
    <include
        android:id="@+id/error_state"
        layout="@layout/view_offline_state"
        android:visibility="gone" />
    
    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_24dp"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your wellness journey is just beginning!"
            android:textSize="16sp"
            android:textColor="@color/sage_green_primary"
            android:gravity="center" />
        
    </LinearLayout>
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>