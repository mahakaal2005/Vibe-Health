<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium">

            <ImageView
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:contentDescription="@string/goal_calculation_icon"
                android:src="@drawable/ic_goal_calculation"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.VibeHealth.Headline5"
                android:textColor="?attr/colorOnSurface"
                tools:text="How Your Goals Are Calculated" />

        </LinearLayout>

        <!-- Introduction -->
        <TextView
            android:id="@+id/textIntroduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:textAppearance="@style/TextAppearance.VibeHealth.Body1"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Your wellness goals are personalized based on WHO guidelines and your profile. Here's how we calculate each goal:" />

        <!-- Goal Explanations -->
        <LinearLayout
            android:id="@+id/layoutGoalExplanations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Steps Goal Explanation -->
            <LinearLayout
                android:id="@+id/layoutStepsExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:contentDescription="@string/steps_icon"
                        android:src="@drawable/ic_steps"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/textStepsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle1"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Steps Goal" />

                    <TextView
                        android:id="@+id/textStepsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                        android:textColor="?attr/colorPrimary"
                        tools:text="10,000 steps" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textStepsExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_xl"
                    android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Base goal of 10,000 steps adjusted for age (25 years) and gender" />

            </LinearLayout>

            <!-- Calories Goal Explanation -->
            <LinearLayout
                android:id="@+id/layoutCaloriesExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:contentDescription="@string/calories_icon"
                        android:src="@drawable/ic_calories"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:id="@+id/textCaloriesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle1"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Calories Goal" />

                    <TextView
                        android:id="@+id/textCaloriesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                        android:textColor="?attr/colorSecondary"
                        tools:text="2,000 calories" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textCaloriesExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_xl"
                    android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="BMR calculated using Harris-Benedict equation, multiplied by activity level (Light exercise 1-3 days/week)" />

            </LinearLayout>

            <!-- Heart Points Goal Explanation -->
            <LinearLayout
                android:id="@+id/layoutHeartPointsExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:contentDescription="@string/heart_points_icon"
                        android:src="@drawable/ic_heart_points"
                        app:tint="?attr/colorTertiary" />

                    <TextView
                        android:id="@+id/textHeartPointsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle1"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Heart Points Goal" />

                    <TextView
                        android:id="@+id/textHeartPointsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.VibeHealth.Headline6"
                        android:textColor="?attr/colorTertiary"
                        tools:text="30 heart points" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textHeartPointsExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_xl"
                    android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="WHO 150 minutes/week moderate activity (≈21 points/day) adjusted for age and activity level" />

            </LinearLayout>

        </LinearLayout>

        <!-- Personal Factors Section -->
        <LinearLayout
            android:id="@+id/layoutPersonalFactors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPersonalFactorsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle1"
                android:textColor="?attr/colorOnSurface"
                tools:text="Your Personal Factors" />

            <TextView
                android:id="@+id/textPersonalFactorsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="These personal factors from your profile influence your goal calculations:" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPersonalFactors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_personal_factor" />

        </LinearLayout>

        <!-- WHO Sources Section -->
        <LinearLayout
            android:id="@+id/layoutWhoSources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/background_who_sources"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:contentDescription="@string/who_logo"
                    android:src="@drawable/ic_who_logo"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/textWhoSourcesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.VibeHealth.Subtitle1"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="WHO Sources" />

            </LinearLayout>

            <TextView
                android:id="@+id/textWhoSourcesDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Our calculations are based on these World Health Organization guidelines:" />

            <!-- Steps Source -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/steps_goal_label"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textStepsSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="WHO Physical Activity Guidelines 2020 - 10,000 steps baseline with age adjustments" />

            <!-- Calories Source -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/calories_goal_label"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCaloriesSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Harris-Benedict Revised equation (1984) with WHO activity factors" />

            <!-- Heart Points Source -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/heart_points_goal_label"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textHeartPointsSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:textAppearance="@style/TextAppearance.VibeHealth.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="WHO 150 minutes/week moderate activity converted to daily heart points" />

            <!-- Last Updated -->
            <TextView
                android:id="@+id/textWhoLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textAppearance="@style/TextAppearance.VibeHealth.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic"
                tools:text="WHO Guidelines 2020" />

            <!-- WHO Website Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWhoWebsite"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/visit_who_website"
                app:icon="@drawable/ic_open_in_new" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>