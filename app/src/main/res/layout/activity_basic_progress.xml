<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-schemas-android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_sage_neutral"
    tools:context=".ui.progress.BasicProgressActivity">

    <!-- App Bar Layout with Supportive Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sage_green_primary"
            app:title="@string/your_wellness_journey"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with Nested Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16dp">

            <!-- Supportive Header Section -->
            <LinearLayout
                android:id="@+id/progress_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_24dp">

                <!-- Encouraging Progress Title -->
                <TextView
                    android:id="@+id/progress_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_wellness_journey"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/sage_green_primary"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_8dp"
                    android:visibility="gone" />

                <!-- Supportive Context Message -->
                <TextView
                    android:id="@+id/progress_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_encouraging_context"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/warm_gray_green"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_16dp"
                    android:visibility="gone" />

                <!-- Offline Indicator with Supportive Messaging -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/offline_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/soft_coral_light"
                    app:cardCornerRadius="@dimen/corner_radius_8dp"
                    app:cardElevation="@dimen/elevation_1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:src="@drawable/ic_offline"
                            android:contentDescription="@string/offline_mode"
                            app:tint="@color/soft_coral"
                            android:layout_marginEnd="@dimen/spacing_8dp" />

                        <TextView
                            android:id="@+id/offline_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/progress_offline_supportive_message"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/soft_coral" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Progress Supportive Message -->
                <TextView
                    android:id="@+id/progress_supportive_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/sage_green_primary"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Loading State Container -->
            <LinearLayout
                android:id="@+id/progress_loading_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_32dp"
                android:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_loading_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    app:indicatorColor="@color/sage_green_primary"
                    app:trackColor="@color/sage_green_light"
                    android:layout_marginBottom="@dimen/spacing_16dp" />

                <TextView
                    android:id="@+id/progress_loading_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_loading_encouraging_message"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/warm_gray_green"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Error State Container -->
            <LinearLayout
                android:id="@+id/progress_error_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/ic_supportive_error"
                    android:contentDescription="@string/error_occurred"
                    app:tint="@color/soft_coral"
                    android:layout_marginBottom="@dimen/spacing_16dp" />

                <TextView
                    android:id="@+id/progress_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_error_supportive_message"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/soft_coral"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_8dp" />

                <TextView
                    android:id="@+id/progress_error_guidance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/warm_gray_green"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/progress_retry_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/try_again_supportive"
                    app:backgroundTint="@color/sage_green_primary"
                    app:cornerRadius="@dimen/corner_radius_8dp" />

            </LinearLayout>

            <!-- Empty State Container -->
            <LinearLayout
                android:id="@+id/progress_empty_state_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/icon_size_extra_large"
                    android:layout_height="@dimen/icon_size_extra_large"
                    android:src="@drawable/ic_wellness_journey_start"
                    android:contentDescription="@string/start_wellness_journey"
                    app:tint="@color/sage_green_primary"
                    android:layout_marginBottom="@dimen/spacing_24dp" />

                <TextView
                    android:id="@+id/progress_empty_state_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_empty_state_encouraging_message"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="@color/sage_green_primary"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_16dp" />

                <TextView
                    android:id="@+id/progress_empty_state_guidance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_empty_state_supportive_guidance"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/warm_gray_green"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Main Content Container -->
            <LinearLayout
                android:id="@+id/progress_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Supportive Insights Container -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/progress_insights_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/sage_green_light"
                    app:cardCornerRadius="@dimen/corner_radius_12dp"
                    app:cardElevation="@dimen/elevation_2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/ic_insights"
                            android:contentDescription="@string/wellness_insights"
                            app:tint="@color/sage_green_primary"
                            android:layout_marginEnd="@dimen/spacing_12dp" />

                        <TextView
                            android:id="@+id/progress_insights_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/progress_supportive_insights"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/sage_green_dark" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Weekly Progress Graphs Container -->
                <LinearLayout
                    android:id="@+id/progress_graphs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Steps Progress Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_16dp"
                        app:cardBackgroundColor="@color/surface_variant_sage"
                        app:cardCornerRadius="@dimen/corner_radius_12dp"
                        app:cardElevation="@dimen/elevation_2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_16dp">

                            <!-- Steps Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/spacing_12dp">

                                <ImageView
                                    android:layout_width="@dimen/icon_size_medium"
                                    android:layout_height="@dimen/icon_size_medium"
                                    android:src="@drawable/ic_steps"
                                    android:contentDescription="@string/steps_metric"
                                    app:tint="@color/sage_green_primary"
                                    android:layout_marginEnd="@dimen/spacing_8dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/steps_progress_title"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/sage_green_primary" />

                            </LinearLayout>

                            <!-- Steps Progress Graph Placeholder -->
                            <com.vibehealth.android.ui.components.BasicProgressGraph
                                android:id="@+id/steps_progress_graph"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_graph_height"
                                android:layout_marginBottom="@dimen/spacing_8dp"
                                app:metricType="steps"
                                app:primaryColor="@color/sage_green_primary"
                                app:supportiveMessaging="true" />

                            <!-- Steps Supportive Message -->
                            <TextView
                                android:id="@+id/steps_supportive_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/steps_supportive_message"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/warm_gray_green"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Calories Progress Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_16dp"
                        app:cardBackgroundColor="@color/surface_variant_sage"
                        app:cardCornerRadius="@dimen/corner_radius_12dp"
                        app:cardElevation="@dimen/elevation_2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_16dp">

                            <!-- Calories Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/spacing_12dp">

                                <ImageView
                                    android:layout_width="@dimen/icon_size_medium"
                                    android:layout_height="@dimen/icon_size_medium"
                                    android:src="@drawable/ic_calories"
                                    android:contentDescription="@string/calories_metric"
                                    app:tint="@color/warm_gray_green"
                                    android:layout_marginEnd="@dimen/spacing_8dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/calories_progress_title"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/warm_gray_green" />

                            </LinearLayout>

                            <!-- Calories Progress Graph Placeholder -->
                            <com.vibehealth.android.ui.components.BasicProgressGraph
                                android:id="@+id/calories_progress_graph"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_graph_height"
                                android:layout_marginBottom="@dimen/spacing_8dp"
                                app:metricType="calories"
                                app:primaryColor="@color/warm_gray_green"
                                app:supportiveMessaging="true" />

                            <!-- Calories Supportive Message -->
                            <TextView
                                android:id="@+id/calories_supportive_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/calories_supportive_message"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/warm_gray_green"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Heart Points Progress Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_16dp"
                        app:cardBackgroundColor="@color/surface_variant_sage"
                        app:cardCornerRadius="@dimen/corner_radius_12dp"
                        app:cardElevation="@dimen/elevation_2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_16dp">

                            <!-- Heart Points Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/spacing_12dp">

                                <ImageView
                                    android:layout_width="@dimen/icon_size_medium"
                                    android:layout_height="@dimen/icon_size_medium"
                                    android:src="@drawable/ic_heart_points"
                                    android:contentDescription="@string/heart_points_metric"
                                    app:tint="@color/soft_coral"
                                    android:layout_marginEnd="@dimen/spacing_8dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/heart_points_progress_title"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/soft_coral" />

                            </LinearLayout>

                            <!-- Heart Points Progress Graph Placeholder -->
                            <com.vibehealth.android.ui.components.BasicProgressGraph
                                android:id="@+id/heart_points_progress_graph"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_graph_height"
                                android:layout_marginBottom="@dimen/spacing_8dp"
                                app:metricType="heart_points"
                                app:primaryColor="@color/soft_coral"
                                app:supportiveMessaging="true" />

                            <!-- Heart Points Supportive Message -->
                            <TextView
                                android:id="@+id/heart_points_supportive_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/heart_points_supportive_message"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/warm_gray_green"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>